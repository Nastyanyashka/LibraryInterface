<Window x:Class="LibraryInterface.PasswordRecovery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryInterface"
        mc:Ignorable="d"
           Title="Смена пароля" Height="270" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label Content="Логин"/>
        <TextBox x:Name="tbLogin"/>
        <Label Content="Старый пароль"/>
        <PasswordBox x:Name="oldPassword"/>
        <Label Content="Новый пароль"/>
        <PasswordBox x:Name="newPassword"/>
        <Label Content="Повторите новый пароль"/>
        <PasswordBox x:Name="repeatNewPassword"/>
        <Button Content="Подтвердить" Margin="0 10" Width="150" Click="ConfirmButton_Click"/>
    </StackPanel>
</Window>
