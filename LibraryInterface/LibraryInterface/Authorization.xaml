<Window x:Class="LibraryInterface.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryInterface"
        mc:Ignorable="d"
        Title="Авторизация" Height="210" Width="300" Closed="LoginWindow_Closed" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label Content="Логин"/>
        <TextBox x:Name="tbLogin"/>
        <Label Content="Пароль"/>
        <PasswordBox x:Name="tbPassword"/>
        <Button Content="Авторизация" Margin="0 10" Width="150" Click="LoginButton_Click"/>
        <Button Content="Сменить пароль" Width="100" BorderBrush="White" Background="White" Click="ForgetPassword_Click"/>
    </StackPanel>
</Window>
